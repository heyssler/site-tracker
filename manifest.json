{
    "manifest_version": 2,
    "name": "Site Time Tracker",
    "version": "1.0",
    "permissions": [
      "webNavigation",
      "storage",
      "tabs"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
}  