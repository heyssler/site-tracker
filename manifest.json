{
    "manifest_version": 2,
    "name": "Site Time Tracker",
    "version": "1.0",
    "icons": {
      "48": "external/icon.svg",
      "96": "external/icon.svg" 
    },
    "applications": {
      "gecko": {
        "id": "temporary@extension.id"
      }
    },
    "permissions": [
      "webNavigation",
      "storage",
      "tabs"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": {
        "48": "external/icon.svg",
        "96": "external/icon.svg"
      },
      "default_popup": "popup.html"
    }
}  